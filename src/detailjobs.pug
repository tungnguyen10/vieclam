              .apply_job
                h3 Liên hệ tuyển dụng
                p.redColor Vui lòng ứng tuyển công việc để xem được thông tin liên hệ
                .btn_register
                  a.apply_now(rel='nofollow', href='#') Đăng nhập
        
          //- jobnews
          block jobnews
            include ./elements/_jobnew.pug

        .col-md-3.hidden-sm.hidden-xs
          .inside-company
            .logo-company
              a(href='#')
                img(alt='Techcombank Vietnam Big Logo', src='./templates/img/techcom.png')
            .employer-info
              h3.name
                a(href='#') Techcombank
              .basic-info
                .short
                  div Trở thành Ngân hàng tốt nhất và doanh nghiệp hàng đầu Việt Nam
                .gear-icon.icon-info
                  i.fas.fa-cog 
                  span Sản phẩm
                .groups-icon.icon-info
                  i.fas.fa-users
                  span 1000+
                .country-icon
                  i.flag.flag-vn
                  span.country-name Vietnam
                .working-date.icon-info
                  i.far.fa-calendar-alt
                  span Thứ 2 - Thứ 6
                .overtime.icon-info
                  i.far.fa-clock
                  span Không có OT
            .employer-profile
              a(href='#') Về chúng tôi
              i.fas.fa-caret-right

  //- footer
  block footer
    include ./elements/_footer.pug

  script(src="./templates/js/jquery.js")
  script(src="./templates/js/slick.min.js")
  script(src="./templates/js/default.js")